<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#707070"
        android:layout_margin="10dp"
        >

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_dot"
            android:id="@+id/viewPriority"
            android:layout_margin="10dp"
            android:layout_gravity="right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/notesTitle"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:text="@string/app_name"
                android:maxLines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/notesSubTitle"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:textColor="#D4D3D3"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:text="ldksakldj djsal jdl sajdsla ladnld saldsajd lajdslajdl asdlsa jdakda hdjkadl dadlha lkfasjloajfsafklsafh afjslajlsajdklsajd ldjajdskaldh avfjkahkahjkas" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/notesDate"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="23 March 2021"
                android:maxLines="1"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>